            <li>
                <div class="container">                
                    <div class="dropdown">
                        <div class="select">
                        <span class="span">User</span>
                        <span style="float: right">â®Ÿ</span>
                        <i class="fa fa-chevron-left"></i>
                        </div>
                        <input type="hidden" name="user">
                        <ul class="dropdown-menu">
                        <% if (users.length > 0) { %>
                            <% users.forEach(user => { %>
