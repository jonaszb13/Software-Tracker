<html lang="de">
<%- include("./partials/head.ejs") %>

    <body class="window">
        <div class="field" id="field_reg">
            <h1>Registrieren</h1>
            <hr>
            <form action="/api/auth/signup" method="post">
                <div class="container">
                    <input type="text" placeholder="Enter Username" name="username" required>
                    <input type="email" placeholder="Enter E-Mail" name="mail" required>
                    <input type="tel" placeholder="Enter Phonenumber" name="phone">
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <input type="password" placeholder="Authentication Code" name="code" required>
                    <button type="submit">Registrieren</button>
                    <p>
                        <%= message%>
                    </p>
                </div>
            </form>
            <a id="link" href="/login">Schon einen Account, jetzt einloggen</a>
        </div>
    </body>
</html>