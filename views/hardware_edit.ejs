<!DOCTYPE html>
<html lang="de">

    <%- include("./partials/head.ejs") %>

<body>

    <form id="form" class="formElement">
        <% //formating start day to better readable string %>
        <% var d = tracker.buy; %>
        <% var buyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(buyString) %>
        
        <% //formating end day to better readable string %>
        <% var d = tracker.warrenty; %>
        <% var warrentyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(warrentyString) %>

        <input placeholder="Kategorie: " type="text" id="category" name="category" value="<%= tracker.category %>" required>
        <input placeholder="Name: " type="text" id="name" name="name" value="<%= tracker.name %>" required>
        <input placeholder="Kaufdatum: " type="date" id="start" name="start" value="<%= buyString %>" requierd>
        <input placeholder="Garantie bis: " type="date" id="end" name="end" value="<%= warrentyString %>" requierd>
        <input placeholder="Information: " type="text" id="info" name="info" value="<%= tracker.info %>">
        <a class="btnEdit">Eintrag bearbeiten</a>
    </form>

    <script>
        const sender = document.querySelector('a.btnEdit');
        sender.addEventListener('click', (e) => {
            const endpoint = '/hardware/<%= tracker._id %>';
            console.log(document.getElementsByClassName("formElement"));
            const data = new URLSearchParams(new FormData(document.getElementById("form")));
            fetch(endpoint, {
                method: 'POST', 
                body: data
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        })
    </script>

    <a class="delete" data-doc="<%= tracker._id %>">delete</a>

    <script>
        const trashcan = document.querySelector('a.delete');
        trashcan.addEventListener('click', (e) => {
            const endpoint = `/hardware/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        });

    </script>

    
    
</body>
</html>