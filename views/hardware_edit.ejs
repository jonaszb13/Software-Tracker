<html lang="de">

    <%- include("./partials/head.ejs") %>

<body style="background-color: #fff;" id="edit-page">

    <form id="form" class="formElement">
        <% if(tracker.buy != null) { %>
        <% //formating start day to better readable string %>
        <% var d = tracker.buy; %>
        <% var buyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(buyString) } %>
        
        <% if(tracker.warrenty != null) { %>
        <% //formating end day to better readable string %>
        <% var d = tracker.warrenty; %>
        <% var warrentyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(warrentyString) } %>

        <ul id="edit_form" class="formElement">

            <li><input placeholder="Inventurnummer: " type="number" id="inventory" name="inventory" value="<%= tracker.inventory %>" required></li>
            <li><input placeholder="Name: " type="text" id="name" name="name" value="<%= tracker.name %>" required></li>
            <li><input placeholder="Kaufdatum: " type="date" id="start" name="start" value="<%= buyString %>"></li>
            <li><input placeholder="Garantie bis: " type="date" id="end" name="end" value="<%= warrentyString %>"></li>
            
            <li>
                <div class="container">                
                    <div class="dropdown">
                        <div class="select">
                        <span><%= tracker.user %></span>
                        <T style="float: right">â®Ÿ</T>
                        <i class="fa fa-chevron-left"></i>
                        </div>
                        <input type="hidden" name="user" value="<%= tracker.user %>">
                        <ul class="dropdown-menu">
                        <% if (users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <li id="<%= user.username %>"><%= user.username %></li>
                            <% }) %> 
                        <% } %>
                        </ul>
                    </div>
                </div>
            </li>

            <li><input placeholder="Information: " type="text" id="info" name="info" value="<%= tracker.info %>"></li>
            <li><input placeholder="Anmerkungen: " type="text" id="notes" name="notes" value="<%= tracker.notes %>"></li>
            <li><input placeholder="Notzien: " type="text" id="memo" name="memo" value="<%= tracker.memo %>"></li>   
            <li class="optionFields">
                <td>
                    <a class="btnEdit"><img alt="edit" src="/img/icons/bearbeiten.png"></a>
                    <a class="delete" data-doc="<%= tracker._id %>"><img alt="delete" src="/img/icons/mull.png"></a>
                </td>
            </li>

        </ul>
    </form>


    <script>
        /*Dropdown Menu*/
        $('.dropdown').click(function () {
            $(this).attr('tabindex', 1).focus();
            $(this).toggleClass('active');
            $(this).find('.dropdown-menu').slideToggle(300);
        });
        $('.dropdown').focusout(function () {
            $(this).removeClass('active');
            $(this).find('.dropdown-menu').slideUp(300);
        });
        $('.dropdown .dropdown-menu li').click(function () {
            $(this).parents('.dropdown').find('span').text($(this).text());
            $(this).parents('.dropdown').find('input').attr('value', $(this).attr('id'));
        });
        /*End Dropdown Menu*/

    </script>

    <script>
        const sender = document.querySelector('a.btnEdit');
        sender.addEventListener('click', (e) => {
            const endpoint = '/hardware/<%= tracker._id %>';
            console.log(document.getElementsByClassName("formElement"));
            const data = new URLSearchParams(new FormData(document.getElementById("form")));
            fetch(endpoint, {
                method: 'POST', 
                body: data
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        })
    </script>


    <script>
        const trashcan = document.querySelector('a.delete');
        trashcan.addEventListener('click', (e) => {
            const endpoint = `/hardware/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        });

    </script>

    
    
</body>
</html>