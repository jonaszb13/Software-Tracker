<!DOCTYPE html>
<html lang="de">

    <%- include("./partials/head.ejs") %>

<body style="background-color: #fff;" id="edit-page">

    <form id="form" class="formElement">
        <% //formating start day to better readable string %>
        <% var d = tracker.buy; %>
        <% var buyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(buyString) %>
        
        <% //formating end day to better readable string %>
        <% var d = tracker.warrenty; %>
        <% var warrentyString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(warrentyString) %>

        <ul id="edit_form" class="formElement">

            <li><input placeholder="Kategorie: " type="text" id="category" name="category" value="<%= tracker.category %>" required></li>
            <li><input placeholder="Name: " type="text" id="name" name="name" value="<%= tracker.name %>" required></li>
            <li><input placeholder="Kaufdatum: " type="date" id="start" name="start" value="<%= buyString %>" requierd></li>
            <li><input placeholder="Garantie bis: " type="date" id="end" name="end" value="<%= warrentyString %>" requierd></li>
            <li><input placeholder="Information: " type="text" id="info" name="info" value="<%= tracker.info %>"></li>
            <li class="optionFields">
                <td>
                    <a class="btnEdit"><img alt="edit" src="/img/icons/bearbeiten.png"></a>
                    <a class="delete" data-doc="<%= tracker._id %>"><img alt="delete" src="/img/icons/mull.png"></a>
                </td>
            </li>

        </ul>
    </form>

    <script>
        const sender = document.querySelector('a.btnEdit');
        sender.addEventListener('click', (e) => {
            const endpoint = '/hardware/<%= tracker._id %>';
            console.log(document.getElementsByClassName("formElement"));
            const data = new URLSearchParams(new FormData(document.getElementById("form")));
            fetch(endpoint, {
                method: 'POST', 
                body: data
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        })
    </script>


    <script>
        const trashcan = document.querySelector('a.delete');
        trashcan.addEventListener('click', (e) => {
            const endpoint = `/hardware/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        });

    </script>

    
    
</body>
</html>