<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit </title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>

    <form class="formElement" action="/mainpage/<%= tracker._id %>" method="POST">
        <% //formating start day to better readable string %>
        <% var d = tracker.start; %>
        <% var startString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(startString) %>
        
        <% //formating end day to better readable string %>
        <% var d = tracker.end; %>
        <% var endString = (d.getFullYear() + "-" + ("0"+(d.getMonth()+1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2)); %>
        <% console.log(endString) %>

        <input placeholder="Kategorie: " type="text" id="category" name="category" value="<%= tracker.category %>" required>
        <input placeholder="Name: " type="text" id="name" name="name" value="<%= tracker.name %>" required>
        <input placeholder="Startpunkt: " type="date" id="start" name="start" value="<%= startString %>" requierd>
        <input placeholder="Ablaufsdatum: " type="date" id="end" name="end" value="<%= endString %>" requierd>
        <input placeholder="Information: " type="text" id="info" name="info" value="<%= tracker.info %>">
        <button class="btnEdit">Eintrag bearbeiten</button>
    </form>

    <a class="delete" data-doc="<%= tracker._id %>">delete</a>

    <script>
        const trashcan = document.querySelector('a.delete');
        trashcan.addEventListener('click', (e) => {
            const endpoint = `/mainpage/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => top.location.href = data.redirect)
                .catch(err => console.log(err));
        });

    </script>

    
    
</body>
</html>